# Server port (default: 587)
PORT=587

# Transmit API base URL
API_BASE=https://api.xmit.sh

# TLS certificate paths (required for production)
TLS_KEY_PATH=/etc/letsencrypt/live/smtp.xmit.sh/privkey.pem
TLS_CERT_PATH=/etc/letsencrypt/live/smtp.xmit.sh/fullchain.pem

# Set to "development" to disable TLS requirement (for local testing only)
NODE_ENV=production
