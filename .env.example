# SMTP port (default: 587)
SMTP_PORT=587

# IMAP port (default: 993)
IMAP_PORT=993

# Transmit API base URL
API_BASE=https://api.xmit.sh

# TLS certificate paths (required for production)
# Use the same cert for both SMTP and IMAP
TLS_KEY_PATH=/etc/letsencrypt/live/mail.xmit.sh/privkey.pem
TLS_CERT_PATH=/etc/letsencrypt/live/mail.xmit.sh/fullchain.pem

# IMAP idle timeout in ms (default: 30 minutes)
IMAP_IDLE_TIMEOUT=1800000

# Set to "development" to disable TLS requirement (for local testing only)
NODE_ENV=production
